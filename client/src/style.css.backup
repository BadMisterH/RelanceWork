/* ============================================
   RELANCEWORK - Modern Professional Design
   High Contrast | Bold Typography | Clean Layout
   ============================================ */

@import url('https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;600;700;800&family=Outfit:wght@600;700;800&display=swap');

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

:root {
  /* Brand Colors - Vibrant & Bold */
  --color-primary: #6366F1;
  --color-primary-dark: #4F46E5;
  --color-primary-light: #818CF8;
  --color-accent: #F59E0B;

  /* Semantic Colors - High Contrast */
  --color-success: #10B981;
  --color-warning: #F59E0B;
  --color-danger: #EF4444;
  --color-info: #3B82F6;

  /* Neutrals - Strong Contrast */
  --color-dark: #0F172A;
  --color-darker: #020617;
  --color-light: #FFFFFF;
  --color-bg: #F8FAFC;
  --color-bg-secondary: #F1F5F9;
  --color-border: #E2E8F0;
  --color-text: #0F172A;
  --color-text-secondary: #475569;
  --color-text-muted: #94A3B8;

  /* Shadows - Bold */
  --shadow-sm: 0 2px 8px rgba(15, 23, 42, 0.08);
  --shadow-md: 0 4px 16px rgba(15, 23, 42, 0.12);
  --shadow-lg: 0 12px 32px rgba(15, 23, 42, 0.16);
  --shadow-xl: 0 24px 48px rgba(15, 23, 42, 0.20);

  /* Radius */
  --radius-sm: 8px;
  --radius-md: 12px;
  --radius-lg: 16px;
  --radius-xl: 20px;

  /* Layout */
  --sidebar-width: 280px;

  /* Transitions */
  --transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
}

body {
  font-family: 'Plus Jakarta Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
  background: var(--color-bg);
  color: var(--color-text);
  line-height: 1.6;
  min-height: 100vh;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

/* ============================================
   APP LAYOUT
   ============================================ */

.app-wrapper {
  display: flex;
  min-height: 100vh;
}

/* ============================================
   SIDEBAR - High Contrast
   ============================================ */

.sidebar {
  width: var(--sidebar-width);
  background: var(--color-light);
  border-right: 1px solid var(--color-border);
  display: flex;
  flex-direction: column;
  position: fixed;
  height: 100vh;
  z-index: 100;
}

.sidebar-header {
  padding: 32px 24px;
  border-bottom: 1px solid var(--color-border);
}

.logo {
  display: flex;
  align-items: center;
  gap: 12px;
}

.logo-icon {
  width: 44px;
  height: 44px;
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 800;
  font-size: 1.25rem;
  color: white;
  box-shadow: 0 4px 12px rgba(99, 102, 241, 0.3);
}

.logo-text {
  font-family: 'Outfit', sans-serif;
  font-size: 1.375rem;
  font-weight: 800;
  color: var(--color-text);
  letter-spacing: -0.02em;
}

.sidebar-nav {
  flex: 1;
  padding: 20px 16px;
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.nav-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 14px 16px;
  color: var(--color-text-secondary);
  text-decoration: none;
  border-radius: var(--radius-md);
  transition: var(--transition);
  font-weight: 600;
  font-size: 0.9375rem;
}

.nav-item:hover {
  background: var(--color-bg);
  color: var(--color-text);
}

.nav-item.active {
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
  color: white;
  box-shadow: 0 4px 12px rgba(99, 102, 241, 0.25);
}

.nav-icon {
  width: 22px;
  height: 22px;
  flex-shrink: 0;
}

.sidebar-footer {
  padding: 20px 16px;
  border-top: 1px solid var(--color-border);
}

.quick-add-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 10px;
  padding: 16px;
  background: linear-gradient(135deg, var(--color-accent) 0%, #F97316 100%);
  color: white;
  border-radius: var(--radius-md);
  cursor: pointer;
  font-weight: 700;
  font-size: 0.9375rem;
  transition: var(--transition);
  box-shadow: 0 4px 12px rgba(245, 158, 11, 0.25);
}

.quick-add-btn:hover {
  transform: translateY(-2px);
  box-shadow: 0 8px 20px rgba(245, 158, 11, 0.35);
}

.quick-add-btn svg {
  width: 20px;
  height: 20px;
}

/* ============================================
   MAIN CONTENT
   ============================================ */

.main-content {
  flex: 1;
  margin-left: var(--sidebar-width);
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

.top-header {
  min-height: 88px;
  background: var(--color-light);
  border-bottom: 1px solid var(--color-border);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24px 40px;
  position: sticky;
  top: 0;
  z-index: 50;
  box-shadow: var(--shadow-sm);
}

.header-left {
  flex: 1;
}

.page-title {
  font-family: 'Outfit', sans-serif;
  font-size: 2rem;
  font-weight: 800;
  color: var(--color-text);
  margin-bottom: 4px;
  letter-spacing: -0.03em;
}

.page-subtitle {
  font-size: 1rem;
  color: var(--color-text-secondary);
  font-weight: 500;
}

.header-right {
  display: flex;
  align-items: center;
  gap: 20px;
}

.date-display {
  display: flex;
  align-items: center;
  gap: 10px;
  color: var(--color-text-secondary);
  font-size: 0.9375rem;
  font-weight: 600;
  padding: 12px 20px;
  background: var(--color-bg);
  border-radius: var(--radius-sm);
  border: 1px solid var(--color-border);
}

.date-display svg {
  width: 20px;
  height: 20px;
  color: var(--color-primary);
}

/* ============================================
   DASHBOARD CONTENT
   ============================================ */

.dashboard-content {
  padding: 40px;
  display: flex;
  flex-direction: column;
  gap: 32px;
  flex: 1;
}

/* Stats Grid */
.stats-grid {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20px;
}

.stat-card {
  background: var(--color-light);
  border-radius: var(--radius-lg);
  padding: 28px;
  border: 1px solid var(--color-border);
  display: flex;
  flex-direction: column;
  gap: 20px;
  transition: var(--transition);
  box-shadow: var(--shadow-sm);
}

.stat-card:hover {
  transform: translateY(-4px);
  box-shadow: var(--shadow-lg);
  border-color: var(--color-primary);
}

.stat-icon {
  width: 56px;
  height: 56px;
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 1.75rem;
}

.stat-icon svg {
  width: 28px;
  height: 28px;
}

.stat-total .stat-icon {
  background: linear-gradient(135deg, rgba(99, 102, 241, 0.15) 0%, rgba(79, 70, 229, 0.15) 100%);
  color: var(--color-primary);
}

.stat-pending .stat-icon {
  background: linear-gradient(135deg, rgba(59, 130, 246, 0.15) 0%, rgba(37, 99, 235, 0.15) 100%);
  color: var(--color-info);
}

.stat-relance .stat-icon {
  background: linear-gradient(135deg, rgba(245, 158, 11, 0.15) 0%, rgba(249, 115, 22, 0.15) 100%);
  color: var(--color-warning);
}

.stat-nomail .stat-icon {
  background: linear-gradient(135deg, rgba(239, 68, 68, 0.15) 0%, rgba(220, 38, 38, 0.15) 100%);
  color: var(--color-danger);
}

.stat-info {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.stat-number {
  font-family: 'Outfit', sans-serif;
  font-size: 2.75rem;
  font-weight: 800;
  line-height: 1;
  color: var(--color-text);
}

.stat-label {
  font-size: 0.8125rem;
  color: var(--color-text-muted);
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.1em;
}

.stat-trend {
  margin-top: auto;
}

.trend-badge {
  display: inline-flex;
  align-items: center;
  padding: 6px 12px;
  border-radius: 20px;
  font-size: 0.75rem;
  font-weight: 700;
}

.trend-neutral {
  background: rgba(99, 102, 241, 0.1);
  color: var(--color-primary);
}

.trend-info {
  background: rgba(59, 130, 246, 0.1);
  color: var(--color-info);
}

.trend-warning {
  background: rgba(245, 158, 11, 0.1);
  color: var(--color-warning);
}

.trend-danger {
  background: rgba(239, 68, 68, 0.1);
  color: var(--color-danger);
}

/* ============================================
   CHARTS ROW
   ============================================ */

.charts-row {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 20px;
}

.chart-card {
  background: var(--color-light);
  border-radius: var(--radius-lg);
  border: 1px solid var(--color-border);
  overflow: hidden;
  box-shadow: var(--shadow-sm);
  transition: var(--transition);
}

.chart-card:hover {
  box-shadow: var(--shadow-md);
  border-color: var(--color-primary);
}

.chart-header {
  padding: 24px 28px;
  border-bottom: 1px solid var(--color-border);
  background: var(--color-bg);
}

.chart-header h3 {
  font-family: 'Outfit', sans-serif;
  font-size: 1.125rem;
  font-weight: 700;
  color: var(--color-text);
  letter-spacing: -0.02em;
}

.chart-content {
  padding: 28px;
}

/* Donut Chart */
.donut-chart {
  position: relative;
  width: 160px;
  height: 160px;
  margin: 0 auto 20px;
}

.donut-svg {
  width: 100%;
  height: 100%;
  transform: rotate(-90deg);
}

.donut-center {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.donut-value {
  display: block;
  font-family: 'Outfit', sans-serif;
  font-size: 2rem;
  font-weight: 800;
  color: var(--color-text);
}

.donut-label {
  font-size: 0.75rem;
  color: var(--color-text-muted);
  font-weight: 700;
  text-transform: uppercase;
  letter-spacing: 0.08em;
}

.chart-legend {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.legend-item {
  display: flex;
  align-items: center;
  gap: 12px;
  font-size: 0.875rem;
}

.legend-color {
  width: 12px;
  height: 12px;
  border-radius: 3px;
  flex-shrink: 0;
}

.legend-label {
  color: var(--color-text-secondary);
  flex: 1;
  font-weight: 500;
}

.legend-value {
  font-weight: 700;
  color: var(--color-text);
  font-family: 'Outfit', sans-serif;
}

/* Activity List */
.activity-list {
  display: flex;
  flex-direction: column;
  gap: 16px;
  max-height: 320px;
  overflow-y: auto;
}

.activity-item {
  display: flex;
  align-items: flex-start;
  gap: 14px;
  padding-bottom: 14px;
  border-bottom: 1px solid var(--color-border);
}

.activity-item:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.activity-icon {
  width: 40px;
  height: 40px;
  border-radius: var(--radius-sm);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
  font-size: 0.875rem;
  font-weight: 700;
}

.activity-icon.new {
  background: rgba(16, 185, 129, 0.15);
  color: var(--color-success);
}

.activity-icon.relance {
  background: rgba(245, 158, 11, 0.15);
  color: var(--color-warning);
}

.activity-info {
  flex: 1;
  min-width: 0;
}

.activity-title {
  font-size: 0.9375rem;
  font-weight: 600;
  color: var(--color-text);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  margin-bottom: 2px;
}

.activity-meta {
  font-size: 0.8125rem;
  color: var(--color-text-muted);
  font-weight: 500;
}

/* Actions List */
.actions-list {
  display: flex;
  flex-direction: column;
  gap: 12px;
  max-height: 320px;
  overflow-y: auto;
}

.action-item {
  display: flex;
  align-items: center;
  gap: 12px;
  padding: 14px;
  background: var(--color-bg);
  border-radius: var(--radius-sm);
  cursor: pointer;
  transition: var(--transition);
  border: 1px solid var(--color-border);
}

.action-item:hover {
  background: var(--color-light);
  border-color: var(--color-primary);
  transform: translateX(4px);
}

.action-dot {
  width: 8px;
  height: 8px;
  border-radius: 50%;
  background: var(--color-warning);
  flex-shrink: 0;
}

.action-dot.urgent {
  background: var(--color-danger);
  animation: pulse 2s infinite;
}

@keyframes pulse {
  0%, 100% { opacity: 1; transform: scale(1); }
  50% { opacity: 0.7; transform: scale(1.2); }
}

.action-info {
  flex: 1;
  min-width: 0;
}

.action-company {
  font-size: 0.9375rem;
  font-weight: 600;
  color: var(--color-text);
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.action-days {
  font-size: 0.8125rem;
  color: var(--color-text-muted);
  font-weight: 500;
}

/* ============================================
   APPLICATIONS SECTION
   ============================================ */

.applications-section {
  background: var(--color-light);
  border-radius: var(--radius-lg);
  border: 1px solid var(--color-border);
  box-shadow: var(--shadow-sm);
}

.section-header {
  padding: 28px 32px;
  border-bottom: 1px solid var(--color-border);
  display: flex;
  align-items: center;
  justify-content: space-between;
  flex-wrap: wrap;
  gap: 20px;
  background: var(--color-bg);
}

.section-header h2 {
  font-family: 'Outfit', sans-serif;
  font-size: 1.375rem;
  font-weight: 700;
  color: var(--color-text);
  letter-spacing: -0.02em;
}

.section-controls {
  display: flex;
  align-items: center;
  gap: 16px;
  flex-wrap: wrap;
}

.search-box {
  position: relative;
  min-width: 240px;
}

.search-box svg {
  position: absolute;
  left: 14px;
  top: 50%;
  transform: translateY(-50%);
  width: 18px;
  height: 18px;
  color: var(--color-text-muted);
  pointer-events: none;
}

.search-box input {
  width: 100%;
  padding: 12px 14px 12px 42px;
  background: var(--color-light);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-sm);
  color: var(--color-text);
  font-size: 0.875rem;
  font-weight: 500;
  font-family: 'Plus Jakarta Sans', sans-serif;
  transition: var(--transition);
}

.search-box input:focus {
  outline: none;
  border-color: var(--color-primary);
  box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
}

.search-box input::placeholder {
  color: var(--color-text-muted);
}

.filter-buttons {
  display: flex;
  gap: 8px;
}

.filter-btn {
  padding: 10px 18px;
  background: var(--color-light);
  border: 1px solid var(--color-border);
  border-radius: 20px;
  color: var(--color-text-secondary);
  font-size: 0.8125rem;
  font-weight: 700;
  cursor: pointer;
  transition: var(--transition);
  font-family: 'Plus Jakarta Sans', sans-serif;
}

.filter-btn:hover {
  border-color: var(--color-primary);
  color: var(--color-primary);
}

.filter-btn.active {
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
  border-color: var(--color-primary);
  color: white;
  box-shadow: 0 4px 12px rgba(99, 102, 241, 0.25);
}

/* Applications Grid */
.applications-grid {
  padding: 28px;
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
  gap: 20px;
}

.loading-text {
  text-align: center;
  color: var(--color-text-muted);
  padding: 60px;
  grid-column: 1 / -1;
  font-size: 1rem;
  font-weight: 500;
}

/* Application Card */
.box-candidature {
  background: var(--color-light);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-md);
  padding: 24px;
  transition: var(--transition);
  box-shadow: var(--shadow-sm);
}

.box-candidature:hover {
  border-color: var(--color-primary);
  box-shadow: var(--shadow-md);
  transform: translateY(-4px);
}

.box-candidature.needs-relance {
  border-color: var(--color-warning);
  background: rgba(245, 158, 11, 0.03);
}

.box-candidature h2 {
  font-family: 'Outfit', sans-serif;
  font-size: 1.125rem;
  font-weight: 700;
  color: var(--color-text);
  margin-bottom: 16px;
  padding-bottom: 16px;
  border-bottom: 1px solid var(--color-border);
  display: flex;
  align-items: center;
  gap: 10px;
  letter-spacing: -0.01em;
}

.box-candidature ul {
  list-style: none;
}

.box-candidature li {
  padding: 8px 0;
  color: var(--color-text-secondary);
  font-size: 0.875rem;
  font-weight: 500;
}

.box-candidature li:first-of-type {
  color: var(--color-primary);
  font-weight: 700;
}

/* Status Badge */
.status-badge {
  display: inline-flex;
  align-items: center;
  padding: 5px 12px;
  border-radius: 16px;
  font-size: 0.75rem;
  font-weight: 700;
}

.status-badge.en-attente {
  background: rgba(59, 130, 246, 0.1);
  color: var(--color-info);
}

.status-badge.relance {
  background: rgba(245, 158, 11, 0.1);
  color: var(--color-warning);
}

.status-badge.refuse {
  background: rgba(239, 68, 68, 0.1);
  color: var(--color-danger);
}

.status-badge.accepte {
  background: rgba(16, 185, 129, 0.1);
  color: var(--color-success);
}

/* Checkbox */
.relance-checkbox-label {
  display: flex;
  align-items: center;
  gap: 10px;
  cursor: pointer;
  padding: 8px 0;
  font-weight: 600;
}

.relance-checkbox {
  width: 18px;
  height: 18px;
  cursor: pointer;
  accent-color: var(--color-primary);
}

/* Relance Actions */
.relance-actions {
  margin-top: 14px;
}

.btn-relance {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  background: linear-gradient(135deg, var(--color-warning) 0%, #F97316 100%);
  color: white;
  padding: 11px 18px;
  border-radius: var(--radius-sm);
  text-decoration: none;
  font-weight: 700;
  font-size: 0.875rem;
  transition: var(--transition);
  box-shadow: 0 4px 12px rgba(245, 158, 11, 0.25);
}

.btn-relance:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 16px rgba(245, 158, 11, 0.35);
}

/* Badges */
.badge-relance-count {
  display: inline-flex;
  background: rgba(16, 185, 129, 0.1);
  color: var(--color-success);
  padding: 5px 12px;
  border-radius: 16px;
  font-size: 0.75rem;
  font-weight: 700;
  margin-top: 10px;
  margin-right: 8px;
}

.badge-no-email {
  display: inline-flex;
  background: rgba(239, 68, 68, 0.1);
  color: var(--color-danger);
  padding: 5px 12px;
  border-radius: 16px;
  font-size: 0.75rem;
  font-weight: 700;
  margin-top: 10px;
}

/* Delete Button */
.btn-delete {
  background: rgba(239, 68, 68, 0.1);
  color: var(--color-danger);
  border: 1px solid rgba(239, 68, 68, 0.2);
  padding: 10px 16px;
  border-radius: var(--radius-sm);
  cursor: pointer;
  margin-top: 14px;
  font-weight: 700;
  font-size: 0.8125rem;
  transition: var(--transition);
}

.btn-delete:hover {
  background: var(--color-danger);
  color: white;
  border-color: var(--color-danger);
}

/* Empty State */
.empty-state {
  text-align: center;
  padding: 80px 32px;
  color: var(--color-text-muted);
  grid-column: 1 / -1;
}

.empty-state p {
  font-size: 1rem;
  margin-bottom: 8px;
  font-weight: 600;
}

.empty-state span {
  font-size: 0.875rem;
  color: var(--color-text-muted);
  font-weight: 500;
}

/* ============================================
   MODAL
   ============================================ */

.modal-overlay {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(15, 23, 42, 0.75);
  backdrop-filter: blur(8px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 1000;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.2s, visibility 0.2s;
}

.modal-overlay.active {
  opacity: 1;
  visibility: visible;
}

.modal {
  background: var(--color-light);
  border-radius: var(--radius-lg);
  border: 1px solid var(--color-border);
  width: 100%;
  max-width: 580px;
  margin: 24px;
  transform: scale(0.95);
  transition: transform 0.2s;
  box-shadow: var(--shadow-xl);
}

.modal-overlay.active .modal {
  transform: scale(1);
}

.modal-header {
  padding: 24px 28px;
  border-bottom: 1px solid var(--color-border);
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: var(--color-bg);
}

.modal-header h3 {
  font-family: 'Outfit', sans-serif;
  font-size: 1.25rem;
  font-weight: 700;
  color: var(--color-text);
  letter-spacing: -0.02em;
}

.modal-close {
  width: 36px;
  height: 36px;
  border-radius: var(--radius-sm);
  border: none;
  background: var(--color-bg);
  color: var(--color-text-secondary);
  cursor: pointer;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: var(--transition);
}

.modal-close:hover {
  background: var(--color-danger);
  color: white;
}

.modal-close svg {
  width: 20px;
  height: 20px;
}

.modal-form {
  padding: 28px;
}

.form-row {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 18px;
  margin-bottom: 18px;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.form-group label {
  font-size: 0.875rem;
  font-weight: 700;
  color: var(--color-text);
}

.form-group input,
.form-group select {
  padding: 12px 14px;
  background: var(--color-light);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-sm);
  color: var(--color-text);
  font-size: 0.875rem;
  font-weight: 500;
  font-family: 'Plus Jakarta Sans', sans-serif;
  transition: var(--transition);
}

.form-group input:focus,
.form-group select:focus {
  outline: none;
  border-color: var(--color-primary);
  box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
}

.form-group input::placeholder {
  color: var(--color-text-muted);
}

.form-actions {
  display: flex;
  gap: 12px;
  justify-content: flex-end;
  margin-top: 28px;
}

.btn-primary {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  padding: 13px 24px;
  background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-dark) 100%);
  color: white;
  border: none;
  border-radius: var(--radius-sm);
  font-size: 0.875rem;
  font-weight: 700;
  cursor: pointer;
  transition: var(--transition);
  font-family: 'Plus Jakarta Sans', sans-serif;
  box-shadow: 0 4px 12px rgba(99, 102, 241, 0.25);
}

.btn-primary:hover {
  transform: translateY(-2px);
  box-shadow: 0 6px 16px rgba(99, 102, 241, 0.35);
}

.btn-primary svg {
  width: 18px;
  height: 18px;
}

.btn-secondary {
  padding: 13px 24px;
  background: var(--color-bg);
  color: var(--color-text-secondary);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-sm);
  font-size: 0.875rem;
  font-weight: 700;
  cursor: pointer;
  transition: var(--transition);
  font-family: 'Plus Jakarta Sans', sans-serif;
}

.btn-secondary:hover {
  background: var(--color-light);
  border-color: var(--color-text-secondary);
}

/* ============================================
   GOOGLE MAPS MODAL
   ============================================ */

.modal-large {
  max-width: 1400px;
  height: 85vh;
  display: flex;
  flex-direction: column;
}

.search-modal-content {
  display: flex;
  flex-direction: column;
  height: 100%;
  overflow: hidden;
}

.search-controls {
  padding: 24px 28px;
  border-bottom: 1px solid var(--color-border);
  display: flex;
  flex-direction: column;
  gap: 18px;
  background: var(--color-bg);
}

.search-input-group {
  display: flex;
  gap: 12px;
}

.search-input-group input {
  flex: 1;
  padding: 13px 16px;
  background: var(--color-light);
  border: 1px solid var(--color-border);
  border-radius: var(--radius-sm);
  color: var(--color-text);
  font-size: 0.875rem;
  font-weight: 500;
  font-family: 'Plus Jakarta Sans', sans-serif;
  transition: var(--transition);
}

.search-input-group input:focus {
  outline: none;
  border-color: var(--color-primary);
  box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
}

.search-input-group input::placeholder {
  color: var(--color-text-muted);
}

.search-filters {
  display: flex;
  gap: 20px;
  flex-wrap: wrap;
}

.filter-checkbox {
  display: flex;
  align-items: center;
  gap: 8px;
  cursor: pointer;
  color: var(--color-text-secondary);
  font-size: 0.875rem;
  font-weight: 600;
}

.filter-checkbox input[type="checkbox"] {
  width: 18px;
  height: 18px;
  cursor: pointer;
  accent-color: var(--color-primary);
}

.search-results-container {
  display: flex;
  flex: 1;
  overflow: hidden;
  min-height: 0;
}

.google-map {
  flex: 1;
  min-width: 0;
  background: var(--color-bg);
}

.results-list {
  width: 420px;
  border-left: 1px solid var(--color-border);
  display: flex;
  flex-direction: column;
  background: var(--color-bg);
}

.results-header {
  padding: 18px 20px;
  border-bottom: 1px solid var(--color-border);
  background: var(--color-light);
}

.results-header h4 {
  font-family: 'Outfit', sans-serif;
  font-size: 1rem;
  font-weight: 700;
  color: var(--color-text);
  display: flex;
  align-items: center;
  gap: 6px;
}

#resultsCount {
  color: var(--color-text-muted);
  font-size: 0.875rem;
  font-weight: 600;
  font-family: 'Plus Jakarta Sans', sans-serif;
}

.business-results {
  flex: 1;
  overflow-y: auto;
  padding: 14px;
  display: flex;
  flex-direction: column;
  gap: 14px;
}

.empty-text {
  text-align: center;
  color: var(--color-text-muted);
  padding: 60px 20px;
  font-size: 0.9375rem;
  font-weight: 500;
}

.error-text {
  text-align: center;
  color: var(--color-danger);
  padding: 60px 20px;
  font-size: 0.9375rem;
  font-weight: 600;
}

/* ============================================
   ENRICHMENT
   ============================================ */

.btn-enrich-emails {
  transition: var(--transition) !important;
}

.btn-enrich-emails:hover {
  transform: translateY(-2px) !important;
  box-shadow: 0 6px 20px rgba(99, 102, 241, 0.35) !important;
}

.btn-enrich-emails:disabled {
  opacity: 0.5 !important;
  cursor: not-allowed !important;
  transform: none !important;
}

.filter-with-email {
  background: rgba(16, 185, 129, 0.1);
  border: 1px solid rgba(16, 185, 129, 0.3);
  border-radius: 20px;
  padding: 10px 18px !important;
  transition: var(--transition);
}

.filter-with-email:hover {
  background: rgba(16, 185, 129, 0.15);
  border-color: rgba(16, 185, 129, 0.5);
}

.filter-with-email input:checked ~ span {
  color: var(--color-success);
  font-weight: 700;
}

.filter-with-email span {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 0.875rem;
  transition: var(--transition);
}

.enrich-section {
  animation: slideIn 0.3s ease-out;
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(-10px);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

/* ============================================
   SCROLLBAR
   ============================================ */

::-webkit-scrollbar {
  width: 10px;
  height: 10px;
}

::-webkit-scrollbar-track {
  background: var(--color-bg);
}

::-webkit-scrollbar-thumb {
  background: var(--color-border);
  border-radius: 5px;
}

::-webkit-scrollbar-thumb:hover {
  background: var(--color-text-muted);
}

/* ============================================
   SELECTION
   ============================================ */

::selection {
  background: var(--color-primary-light);
  color: white;
}

/* ============================================
   RESPONSIVE
   ============================================ */

@media (max-width: 1400px) {
  .stats-grid {
    grid-template-columns: repeat(2, 1fr);
  }

  .charts-row {
    grid-template-columns: 1fr;
  }
}

@media (max-width: 900px) {
  :root {
    --sidebar-width: 0;
  }

  .sidebar {
    display: none;
  }

  .main-content {
    margin-left: 0;
  }

  .stats-grid {
    grid-template-columns: 1fr;
  }

  .search-results-container {
    flex-direction: column;
  }

  .google-map {
    height: 300px;
  }

  .results-list {
    width: 100%;
    border-left: none;
    border-top: 1px solid var(--color-border);
  }
}

@media (max-width: 600px) {
  .top-header {
    padding: 20px 24px;
  }

  .page-title {
    font-size: 1.5rem;
  }

  .dashboard-content {
    padding: 24px;
  }

  .form-row {
    grid-template-columns: 1fr;
  }

  .applications-grid {
    grid-template-columns: 1fr;
    padding: 20px;
  }
}
